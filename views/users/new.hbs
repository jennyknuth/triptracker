<form class="" action="/users/index" method="post">
  <table>
    <tr>
      <td>
        <label for="firstName">Student's first name</label>
      </td>
      <td>
        <label for="lastName">Student's last name</label>
      </td>
      <td>
        <input type="text" name="firstName" id="firstName" class="firstName" required>
      </td>
      <td>
        <input type="text" name="lastName" id="lastName" class="lastName" required>
      </td>
    </tr>
    <tr>
      <td>
        <label for="school">School</label>
      </td>
      <td>
        <select name="school" id="school">
          <option value="Angevine">Angevine</option>
          <option value="BCSIS">BCSIS</option>
          <option value="Boulder High">Boulder High</option>
          <option value="Centennial Middle">Centennial Middle</option>
          <option value="Coal Creek">Coal Creek</option>
          <option value="Community Montessouri">Community Montessouri</option>
          <option value="Creekside">Creekside</option>
          <option value="Eisenhower">Eisenhower</option>
          <option value="Fireside">Fireside</option>
          <option value="Flatirons">Flatirons</option>
          <option value="Southern Hills">Southern Hills</option>
        </select>
      </td>
    </tr>
    <tr>
      <td>
        <label for="grade">Grade</label>
      </td>
      <td>
        <select name="grade" id="grade">
          <option value="K">Kindergarten</option>
          <option value="1">1st</option>
          <option value="2">2nd</option>
          <option value="3">3rd</option>
          <option value="4">4th</option>
          <option value="5">5th</option>
          <option value="6">6th</option>
          <option value="7">7th</option>
          <option value="8">8th</option>
          <option value="9">9th</option>
          <option value="10">10th</option>
        </select>
      </td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
        <input type="submit" value="Add Student">
      </td>
    </tr>
  </table>
</form>



<script src='/javascripts/client.js'></script>
